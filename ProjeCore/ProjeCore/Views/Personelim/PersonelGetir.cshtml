@model ProjeCore.Models.Personel

@{
    ViewData["Title"] = "PersonelGetir";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

@using (Html.BeginForm("PersonelGuncelle", "Personelim", FormMethod.Post))
{
    <br />
    <br />
    <b>Personel ID</b>
    @Html.TextBoxFor(x => x.PersonelID, new { @class = "form-control" })
    <br />
    <br />
    <b>Personel Adı</b>
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    <br />
    <br />
    <b>Personel Soyad</b>
    @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
    <br />
    <br />
    <b>Personel Şehir</b>
    @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
    <br />
    <br />
    <b>Personel Birimi</b>
    @Html.DropDownListFor(x => x.Birim.BirimID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    <br />
    <br />

    <button class="btn btn-info" style="background-color:#ff6a00;
            color:white;">
        Personel Güncelle
    </button>
}
